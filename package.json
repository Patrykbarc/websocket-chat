{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "db:up": "docker compose -f apps/api/compose.yaml up -d",
    "db:down": "docker compose -f apps/api/compose.yaml down",
    "dev": "pnpm db:up && turbo run dev; pnpm db:down",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "turbo": "^2.8.0"
  },
  "packageManager": "pnpm@10.29.1",
  "engines": {
    "node": ">=18"
  }
}